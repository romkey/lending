<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Items</th>
<% if can? :manage, Category %>
      <th>Loan Duration</th>
      <th colspan="3"></th>
<% end %>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
	<td><%= link_to category.name, items_path(category_id: category.id) %></td>
	<td><%= category.items.count %></td>
<% if can? :manage, Category %>
         <td><%= category.loan_duration %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :manage, Category %>
<%= link_to 'New Category', new_category_path, class: 'btn btn-info'  %>
<% end %>
