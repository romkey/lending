<h1>Welcome to the PDX Hackerspace Lending Library</h1>
<p>
<% if current_user.present? %>
Welcome back, <%= current_user.name %>!
<% else %>
Please <%= link_to 'sign in', new_user_session_path %> using Slack to borrow items and manage your account.
</p>
<% end %>
<div class='row'>
<% if can? :manage, Loan %>
  <div class='col-md-4'>
    <h2>Overdue</h2>
    <ul class="list-group">
      <% @overdue.each do |loan| %>
      <li class="list-group-item"><%= link_to loan.item.name, loan.item %></li>
      <% end %>
    </ul>
  </div>
<% end %>  
  <div class='col-md-4'>
    <h2>Recently Added</h2>
    <ul class="list-group">
      <% @recently_added.each do |item| %>
      <li class="list-group-item"><%= link_to item.name, item %></li>
      <% end %>
    </ul>
  </div>
  <div class='col-md-4'>
    <h2>Recently Returned</h2>
    <ul class="list-group">
      <% @recently_returned.each do |loan| %>
      <li class="list-group-item"><%= link_to loan.item.name, loan.item %></li>
      <% end %>
    </ul>
  </div>
</div>
